	<action name="moveMyHotspot2"><![CDATA[
		if(!hotspot[%1].isMoved,

			// Guardar posición original
			set(hotspot[%1].orig_ath, get(hotspot[%1].ath));
			set(hotspot[%1].orig_atv, get(hotspot[%1].atv));

			// Crear offset aleatorio (-3 a +3 grados)
			set(rndath, calc(random()*6 - 1.5));
			set(rndatv, calc(random()*6 - 1.5));

			// Nueva posición base + dispersión
			tween(hotspot[%1].ath, calc(15.80 + rndath), 0.7, easeOutQuad);
			tween(hotspot[%1].atv, calc(1.5 + rndatv), 0.7, easeOutQuad);

			set(hotspot[%1].side, 'right');
			set(hotspot[%1].isMoved, true);
		,
			// Regresar al origen guardado
			tween(hotspot[%1].ath, get(hotspot[%1].orig_ath), 0.7, easeOutQuad);
			tween(hotspot[%1].atv, get(hotspot[%1].orig_atv), 0.7, easeOutQuad);

			set(hotspot[%1].side, null);	
			set(hotspot[%1].isMoved, false);
		);
	]]></action>

	<action name="moveMyHotspot"><![CDATA[
		if(!hotspot[%1].isMoved,

			// Guardar posición original
			set(hotspot[%1].orig_ath, get(hotspot[%1].ath));
			set(hotspot[%1].orig_atv, get(hotspot[%1].atv));

			// Crear offset aleatorio (-3 a +3 grados)
			set(rndath, calc(random()*6 - 1.5));
			set(rndatv, calc(random()*6 - 1.5));

			// Nueva posición base + dispersión
			tween(hotspot[%1].ath, calc(-16.80 + rndath), 0.7, easeOutQuad);
			tween(hotspot[%1].atv, calc(-1.5 + rndatv), 0.7, easeOutQuad);

			set(hotspot[%1].side, 'left');
			set(hotspot[%1].isMoved, true);
		,
			// Regresar al origen guardado
			tween(hotspot[%1].ath, get(hotspot[%1].orig_ath), 0.7, easeOutQuad);
			tween(hotspot[%1].atv, get(hotspot[%1].orig_atv), 0.7, easeOutQuad);

			set(hotspot[%1].side, null);
			set(hotspot[%1].isMoved, false);
		);
	]]></action>

	<action name="validateBalance"><![CDATA[
		
    # Inicializar sumas
    set(peso_left, 0);
    set(peso_right, 0);

    # Recorrer todos los hotspots
    for(hs, hotspots,
        # Si el hotspot pertenece a la escena actual
        if(hotspot[hs].side != null,
            
            # Si está en la izquierda
            if(hotspot[hs].side == 'left',
                add(peso_left, hotspot[hs].weight);
            );

            # Si está en la derecha
            if(hotspot[hs].side == 'right',
                add(peso_right, hotspot[hs].weight);
            );
        );
    );

    # Comparar
    sub(diff, peso_left, peso_right);
    abs(diff);

    if(diff <= 0.1,
		set(hotspot[Balanza_Respuesta_Correcta].visible, true);
    ,
		set(hotspot[Balanza_Respuesta_Incorrecta].visible, true);
    );

	]]></action>

